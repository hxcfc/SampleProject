{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "EnableConsoleLogging": false,
    "EnableFileLogging": false
  },
  "Database": {
    "UseInMemory": true,
    "DatabaseName": "TestDb",
    "ConnectionString": "InMemory",
    "EnableSensitiveDataLogging": false
  },
  "Jwt": {
    "SecretKey": "TestSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "SampleProject.API.Test",
    "Audience": "SampleProject.Users.Test",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "UseCookies": true,
    "AccessTokenCookieName": "auth_session",
    "RefreshTokenCookieName": "auth_refresh",
    "CookieDomain": null,
    "CookiePath": "/",
    "SecureCookies": false,
    "SameSiteMode": "Lax"
  },
  "Swagger": {
    "Enabled": false,
    "DemoCredentials": {
      "Enabled": true,
      "Users": [
        {
          "Username": "admin@example.com",
          "Password": "admin123",
          "Role": "Admin"
        },
        {
          "Username": "user@example.com",
          "Password": "user123",
          "Role": "User"
        }
      ]
    }
  },
  "HealthCheck": {
    "Enabled": false,
    "EnableUI": false
  },
  "SecurityHeaders": {
    "EnableXContentTypeOptions": false,
    "EnableXFrameOptions": false,
    "EnableXSSProtection": false,
    "EnableContentSecurityPolicy": false,
    "EnableReferrerPolicy": false,
    "EnablePermissionsPolicy": false,
    "EnableStrictTransportSecurity": false
  },
  "EnableHttpsRedirection": false,
  "Cors": {
    "AllowedOrigins": []
  },
  "RateLimiting": {
    "Enabled": false
  },
  "Monitoring": {
    "Enabled": false
  },
  "AllowedHosts": "*"
}
